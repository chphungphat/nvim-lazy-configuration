      end

      -- Keymaps for dap-ui
      vim.keymap.set("n", "<leader>du", dapui.toggle, { desc = "Toggle Debug UI" })
      vim.keymap.set("n", "<leader>de", dapui.eval, { desc = "Evaluate Expression" })
      vim.keymap.set("v", "<leader>de", dapui.eval, { desc = "Evaluate Selection" })
    end,
